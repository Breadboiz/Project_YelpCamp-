<% layout('/layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">
        EDIT CAMPGROUND
    </h1>
    <div class="col-6 offset-3">
        <form action="/campground/<%= campground._id%>?_method=PUT " class="validated-form" method="post" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="Title" class="form-label">Title</label>
            <input class="form-control" type="text" id="Title" value="<%= campground.title %>" name="campground[title]" required>
            <span class="valid-feedback">Look good!</span>
          </div>
            <div class="mb-3">
              <label for="location" class="form-label">Location</label>
              <input class="form-control" type="text" id="location" value="<%= campground.location %>" name="campground[location]" required>
              <span class="valid-feedback">Look good!</span>
            </div>
            <div class="mb-3">
              
                <label for="image-url" class="form-label">Image Url</label>
                <input class="form-control" type="file" id="image-url" name="campground[image]" multiple>           
                  <% if(campground.image.length){ %>
                    <p class="mt-3">Delele image: </p>
                    <% for(image of campground.image) {%>
                      <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" name="removeImg[]" value="<%= image.filename %>" id="flexCheckIndeterminate">
                        <label class="form-check-label" for="flexCheckIndeterminate">
                            <img src="<%= getResizedImage(image.filename, 500, 300) %>" alt="" srcset="">
                        </label>
                      </div>
                    <% } %>
                  <% } %>
                <span class="valid-feedback">Look good!</span>
              </div>
              <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" type="text" id="description" name="campground[description]" required> <%= campground.description %></textarea>
                <span class="valid-feedback">Look good!</span>
              </div>
              <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input type="text" id="price" value="<%= campground.price %>" class="form-control" aria-label="Amount (to the nearest dollar)" name="campground[price]" required>
                    <span class="input-group-text">.00</span>
                  </div>
                  <span class="valid-feedback">Look good!</span>
              </div>
              <div class="mb-3">
                <button type="submit" class="btn btn-info mb-3">Submit</button>
              </div>
          </form>
          <div class="mb-3">
            <a href="/campground/<%= campground._id %>">Back to campground</a>
          </div>
    </div>
           
  
</div>
